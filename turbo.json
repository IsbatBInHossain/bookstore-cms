{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", ".env*"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "prisma:migrate": {
      "cache": false
    },
    "prisma:generate": {
      "inputs": ["prisma/schema.prisma"]
    }
  }
}
