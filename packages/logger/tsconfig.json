{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // CRITICAL: This generates the .d.ts files for type safety in other packages.
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
